@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --primary: #0F172A;
    --primary-light: #1E293B;
    --accent: #3B82F6;
    --accent-glow: #60A5FA;
    --success: #10B981;
    --warning: #F59E0B;
    --danger: #EF4444;
    --text: #F1F5F9;
    --text-secondary: #94A3B8;
    --border: #334155;
    --gradient-1: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --gradient-2: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    --gradient-3: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    --gradient-success: linear-gradient(135deg, #10B981 0%, #059669 100%);
    
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 210 40% 98%;
    --primary-foreground: 222.2 84% 4.9%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 212.7 26.8% 83.9%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'Segoe UI', sans-serif;
    background: var(--primary);
    color: var(--text);
    min-height: 100vh;
    overflow-x: hidden;
    position: relative;
  }

  /* Animated background */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 20%, rgba(236, 72, 153, 0.05) 0%, transparent 50%);
    pointer-events: none;
    z-index: 1;
  }
}

@layer components {
  /* Enhanced Card Styles */
  .enhanced-card {
    @apply relative overflow-hidden transition-all duration-300 ease-in-out;
    background: var(--primary-light);
    border: 1px solid var(--border);
    border-radius: 16px;
  }
  
  .enhanced-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border-color: var(--accent);
  }

  .enhanced-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-1);
  }

  .enhanced-card.success::before {
    background: var(--gradient-success);
  }

  .enhanced-card.warning::before {
    background: linear-gradient(135deg, #F59E0B, #F97316);
  }

  /* Metric Cards */
  .metric-card {
    @apply enhanced-card p-6;
  }

  .metric-header {
    @apply flex justify-between items-start mb-4;
  }

  .metric-icon {
    @apply w-10 h-10 rounded-lg flex items-center justify-center text-xl;
    background: rgba(59, 130, 246, 0.1);
  }

  .metric-change {
    @apply px-2 py-1 rounded-md text-xs font-semibold;
  }

  .metric-change.positive {
    background: rgba(16, 185, 129, 0.1);
    color: var(--success);
  }

  .metric-change.negative {
    background: rgba(239, 68, 68, 0.1);
    color: var(--danger);
  }

  .metric-value {
    @apply text-3xl font-bold mb-2 flex items-baseline gap-2;
    color: var(--text);
  }

  .metric-value small {
    @apply text-lg font-normal;
    color: var(--text-secondary);
  }

  .metric-label {
    @apply text-sm mb-3;
    color: var(--text-secondary);
  }

  .metric-progress {
    @apply h-1.5 rounded-full overflow-hidden mt-3;
    background: rgba(59, 130, 246, 0.1);
  }

  .metric-progress-bar {
    @apply h-full rounded-full transition-all duration-1000 ease-out;
    background: var(--gradient-1);
  }

  /* Live Activity Indicators */
  .live-indicator {
    @apply flex items-center gap-2 px-3 py-1 rounded-full;
    background: rgba(16, 185, 129, 0.1);
  }

  .live-dot {
    @apply w-2 h-2 rounded-full;
    background: var(--success);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }

  .live-text {
    @apply text-xs font-semibold;
    color: var(--success);
  }

  /* Enhanced Sidebar */
  .sidebar-enhanced {
    background: var(--primary-light);
    border-right: 1px solid var(--border);
  }

  /* Header Enhancements */
  .logo-enhanced {
    @apply flex items-center gap-4;
  }

  .logo-icon {
    @apply w-12 h-12 rounded-xl flex items-center justify-center text-2xl;
    background: var(--gradient-1);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
  }

  .logo-text h1 {
    @apply text-2xl font-bold;
    background: linear-gradient(135deg, #667eea, #a78bfa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .logo-text p {
    @apply text-sm mt-1;
    color: var(--text-secondary);
  }

  /* Activity Feed */
  .activity-item {
    @apply flex gap-3 py-3 border-b border-opacity-50;
    border-color: var(--border);
    animation: slideIn 0.5s ease;
  }

  @keyframes slideIn {
    from { opacity: 0; transform: translateX(20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .activity-icon {
    @apply w-9 h-9 rounded-lg flex items-center justify-center flex-shrink-0;
  }

  .activity-icon.reddit { background: rgba(255, 69, 0, 0.1); }
  .activity-icon.twitter { background: rgba(29, 161, 242, 0.1); }
  .activity-icon.linkedin { background: rgba(0, 119, 181, 0.1); }
  .activity-icon.email { background: rgba(59, 130, 246, 0.1); }

  .activity-content {
    @apply flex-1;
  }

  .activity-text {
    @apply text-sm mb-1;
    color: var(--text);
  }

  .activity-time {
    @apply text-xs;
    color: var(--text-secondary);
  }

  /* Platform Cards */
  .platform-card {
    @apply relative overflow-hidden text-center transition-all duration-300;
    background: var(--primary-light);
    border: 1px solid var(--border);
  }

  .platform-card::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .platform-card:hover::after {
    opacity: 1;
  }

  .platform-card:hover {
    transform: translateY(-3px);
    border-color: var(--accent);
  }

  /* Custom Scrollbars */
  .custom-scrollbar::-webkit-scrollbar {
    @apply w-1;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(59, 130, 246, 0.1);
    @apply rounded-sm;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: var(--accent);
    @apply rounded-sm;
  }
}

:root {
  --background: hsl(0, 0%, 100%);
  --foreground: hsl(20, 14.3%, 4.1%);
  --muted: hsl(60, 4.8%, 95.9%);
  --muted-foreground: hsl(25, 5.3%, 44.7%);
  --popover: hsl(0, 0%, 100%);
  --popover-foreground: hsl(20, 14.3%, 4.1%);
  --card: hsl(0, 0%, 100%);
  --card-foreground: hsl(20, 14.3%, 4.1%);
  --border: hsl(20, 5.9%, 90%);
  --input: hsl(20, 5.9%, 90%);
  --primary: hsl(207, 90%, 54%);
  --primary-foreground: hsl(211, 100%, 99%);
  --secondary: hsl(60, 4.8%, 95.9%);
  --secondary-foreground: hsl(24, 9.8%, 10%);
  --accent: hsl(60, 4.8%, 95.9%);
  --accent-foreground: hsl(24, 9.8%, 10%);
  --destructive: hsl(0, 84.2%, 60.2%);
  --destructive-foreground: hsl(60, 9.1%, 97.8%);
  --ring: hsl(20, 14.3%, 4.1%);
  --radius: 0.5rem;
}

.dark {
  --background: hsl(240, 10%, 3.9%);
  --foreground: hsl(0, 0%, 98%);
  --muted: hsl(240, 3.7%, 15.9%);
  --muted-foreground: hsl(240, 5%, 64.9%);
  --popover: hsl(240, 10%, 3.9%);
  --popover-foreground: hsl(0, 0%, 98%);
  --card: hsl(240, 10%, 3.9%);
  --card-foreground: hsl(0, 0%, 98%);
  --border: hsl(240, 3.7%, 15.9%);
  --input: hsl(240, 3.7%, 15.9%);
  --primary: hsl(207, 90%, 54%);
  --primary-foreground: hsl(211, 100%, 99%);
  --secondary: hsl(240, 3.7%, 15.9%);
  --secondary-foreground: hsl(0, 0%, 98%);
  --accent: hsl(240, 3.7%, 15.9%);
  --accent-foreground: hsl(0, 0%, 98%);
  --destructive: hsl(0, 62.8%, 30.6%);
  --destructive-foreground: hsl(0, 0%, 98%);
  --ring: hsl(240, 4.9%, 83.9%);
  --radius: 0.5rem;
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply font-sans antialiased bg-background text-foreground;
  }
}